- var title = "Cloud-Init-Generator"
- var app_name = "app"
block variables
doctype
html(lang='ja')
    head
        link(rel='stylesheet',href='/stylesheets/bootstrap/bootstrap.css')
        meta(name="viewport")
        script(src='/javascripts/bootstrap/bootstrap.js')
        script(src='/javascripts/vue.js')
        script(src='/javascripts/axios.min.js')
        meta(charset='utf-8')
        meta(name='viewport',content="width=device-width,initial-scale=1")
        title #{title}
        block header
    body
        header
            nav(class='navbar navbar-expand-lg navbar-dark bg-dark')
                div(class="container")
                    a(class="navbar-brand",href="/") Cloud-Init Plan Generator
                    button(
                        class="navbar-toggler",
                        type="button",
                        data-bs-toggle="collapse",
                        data-bs-target="#navbarSupportedContent",
                        aria-controls="navbarSupportedContent",
                        aria-expanded="false",
                        aria-label="Toggle navigation"
                        )
                        span(class="navbar-toggler-icon")
                    div(class="collapse navbar-collapse",id="navbarSupportedContent")
                        ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                            li(class="nav-item")
                                a(class="nav-link",aria-current="page",href="/edit/new") New Install
                            li(class="nav-item")
                                a(class="nav-link",aria-current="page",href="/install-list") Install list
        main(class="container-fluid",id=app_name)
            div(class="container mt-3")
                div(v-if="message")
                    div(class="alert alert-danger",role="alert" v-if="message.error != null && message.error.length > 0") {{message.error}}
                    div(class="alert alert-success",role="alert" v-if="message.success != null && message.success.length > 0") {{message.success}}
                block content
        block vue_script